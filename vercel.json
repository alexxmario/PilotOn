{
  "version": 2,
  "name": "piloton-app",
  "projects": [
    {
      "name": "piloton-backend",
      "source": "backend",
      "framework": null
    },
    {
      "name": "piloton-frontend",
      "source": "navishop",
      "framework": "create-react-app"
    },
    {
      "name": "piloton-admin",
      "source": "admin-panel",
      "framework": "create-react-app"
    }
  ],
  "builds": [
    {
      "src": "backend/server.js",
      "use": "@vercel/node"
    },
    {
      "src": "navishop/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    },
    {
      "src": "admin-panel/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/server.js"
    },
    {
      "src": "/admin/(.*)",
      "dest": "admin-panel/$1"
    },
    {
      "src": "/(.*)",
      "dest": "navishop/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "backend/server.js": {
      "maxDuration": 30
    }
  },
  "regions": ["fra1"],
  "github": {
    "autoDeployment": true
  }
}